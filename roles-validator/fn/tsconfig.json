{
	"compilerOptions": {
	  "allowJs": true,
	  "allowSyntheticDefaultImports": true,
	  "baseUrl": "./",
	  "declaration": true,
	  "emitDecoratorMetadata": true,
	  "esModuleInterop": true,
	  "experimentalDecorators": true,
	  "incremental": true,
	  "module": "commonjs",
	  "noImplicitAny": true,
	  "noLib": false,
	  "noUnusedLocals": true,
	  "outDir": "./dist",
	  "removeComments": true,
	  "resolveJsonModule": true,
	  "skipLibCheck": true,
	  "sourceMap": true,
	  "strict": true,
	  "target": "es2017"
	},
	"include": ["src/**/*", "src/index.ts"],
	"exclude": ["node_modules", "dist"]
}
